<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="240dp"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center|top"
    android:layout_marginTop="10dp"
    android:background="@drawable/edtstyle">

    <ImageView
        android:id="@+id/imgrvUserProductView_cartView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ropapredeterminada"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/nombreProductoUserView_cartView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cantidadProductoUserView_cartView"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-70dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="Nombre del Producto" />

    <TextView
        android:id="@+id/cantidadProductoUserView_cartView"
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:layout_below="@id/imgrvUserProductView_cartView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="18dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="Cantidad producto" />

    <TextView
        android:id="@+id/infoTvwSCVCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="54dp"
        android:text="Cantidad:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtotalUserProductView__cartView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="18dp"
        android:text="Subtotal"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/infoTvwSCVSubTotalCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="20dp"
        android:text="Subtotal:"
        android:textSize="14sp"
        android:textStyle="bold" />


</RelativeLayout>
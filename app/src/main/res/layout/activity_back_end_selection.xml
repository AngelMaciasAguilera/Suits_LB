<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo4"
    tools:context=".vistas.AdminViews.BackEndSelection">


    <Button
        android:id="@+id/btAdminUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="250dp"
        android:backgroundTint="@color/black"
        android:insetTop="1dp"
        android:text="Usuarios"
        android:textColor="@color/white"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cabeceraLogIn"
        app:layout_constraintVertical_bias="0.489" />

    <Button
        android:id="@+id/btAdminAdmins"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="250dp"
        android:backgroundTint="@color/black"
        android:insetTop="1dp"
        android:text="Administradores "
        android:textColor="@color/white"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cabeceraLogIn"
        app:layout_constraintVertical_bias="0.491" />

    <Button
        android:id="@+id/btAdminRopa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="250dp"
        android:backgroundTint="@color/black"
        android:insetTop="1dp"
        android:text="Ropa"
        android:textColor="@color/white"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cabeceraLogIn"
        app:layout_constraintVertical_bias="0.792" />

    <Button
        android:id="@+id/btAdminCategories"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="250dp"
        android:backgroundTint="@color/black"
        android:insetTop="1dp"
        android:text="Categorias"
        android:textColor="@color/white"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cabeceraLogIn"
        app:layout_constraintVertical_bias="0.792" />

    <Button
        android:id="@+id/goBackToLogIn"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/black"
        android:insetTop="1dp"
        android:text="Cerrar sesion"
        android:textColor="@color/white"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toTopOf="@+id/btAdminUsers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cabeceraLogIn"
        app:layout_constraintVertical_bias="0.246" />

    <LinearLayout
        android:id="@+id/cabeceraLogIn"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cabeceraLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:width="0dp"
            android:text="@string/personalizedTitle"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="179dp"></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/btGoToAdminOrders"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/black"
        android:text="Actualizar el estado de los pedidos"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btAdminCategories" />

</androidx.constraintlayout.widget.ConstraintLayout>
            android:name=".vistas.AdminViews.AdminUserView.AddingUsersScreen"
            android:exported="false" />
        <activity
            android:name=".vistas.AdminViews.AdminAdminsView.AddingAdminsScreen"
            android:exported="false" />
        <activity
            android:name=".vistas.AdminViews.AdminAdminsView.ManagementAdminScreen"
            android:exported="false" />
        <activity
            android:name=".vistas.AdminViews.AdminAdminsView.MainAdminScreenManager"
            android:exported="false" />
        <activity
            android:name=".vistas.BackEndSelection"
            android:exported="false" />
        <activity
            android:name=".vistas.SignInPage"
            android:exported="false" />
        <activity
            android:name=".vistas.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
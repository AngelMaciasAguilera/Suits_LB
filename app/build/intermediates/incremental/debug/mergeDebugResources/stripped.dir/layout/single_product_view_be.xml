<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center|top"
    android:layout_marginTop="10dp"
    android:background="@color/blueTitle">

    <ImageView
        android:id="@+id/imgrvProducto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ropapredeterminada"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/precioProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgrvProducto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="Precio del producto" />

    <TextView
        android:id="@+id/nombreProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/precioProducto"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="Nombre del Producto" />


</RelativeLayout>